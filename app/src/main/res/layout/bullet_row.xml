<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="d"
            type="me.samen.d2.data.entities.Bullet" />

        <variable
            name="vm"
            type="me.samen.d2.view.bullet.BulletVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/ttype"
            android:id="@+id/bu_row_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{d.type}" />


        <TextView
            style="@style/tdesc"
            android:layout_marginStart="16dp"
            android:id="@+id/bu_row_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{d.desc}"
            app:layout_constraintStart_toEndOf="@+id/bu_row_type"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bu_row_del"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bu_row_desc"
            android:text="X"
            android:onClick="@{(v) -> vm.delete(v, d)}" />

        <CheckBox
            android:id="@+id/bu_row_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            app:layout_constraintStart_toEndOf="@+id/bu_row_del"
            app:layout_constraintTop_toTopOf="@+id/bu_row_del"
            bind:burowdone="@{d}"
            bind:vm="@{vm}" />

        <TextView
            android:id="@+id/bu_row_ts"
            style="@style/tpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{d.ts}"
            app:layout_constraintBottom_toBottomOf="@+id/bu_row_del"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>